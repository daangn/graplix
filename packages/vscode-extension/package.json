{
  "name": "graplix-vscode-extension",
  "displayName": "Graplix Language Support",
  "version": "2.0.0",
  "private": true,
  "description": "VS Code extension for Graplix syntax highlighting and language server features",
  "keywords": [
    "graplix",
    "rebac",
    "dsl",
    "vscode-extension",
    "syntax-highlighting",
    "language-server",
    "langium"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/daangn/graplix.git",
    "directory": "packages/graplix-vscode-extension"
  },
  "license": "MIT",
  "author": "Danggeun Market Inc.",
  "publisher": "daangn",
  "type": "module",
  "main": "./dist/extension.cjs",
  "files": [
    "dist",
    "syntaxes",
    "LICENSE",
    "language-configuration.json"
  ],
  "scripts": {
    "build": "tsdown && vsce package --no-dependencies",
    "watch": "tsdown --watch"
  },
  "contributes": {
    "grammars": [
      {
        "language": "graplix",
        "scopeName": "source.graplix",
        "path": "./syntaxes/graplix.tmLanguage.json"
      }
    ],
    "languages": [
      {
        "id": "graplix",
        "aliases": [
          "Graplix",
          "graplix"
        ],
        "extensions": [
          ".graplix"
        ],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "dependencies": {
    "@graplix/language": "^0.0.0",
    "langium": "^4.1.3",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^3.2.1",
    "tsdown": "^0.19.0-beta.3",
    "typescript": "^5.9.3",
    "vscode": "^1.1.37"
  },
  "engines": {
    "vscode": "^1.80.0"
  }
}
