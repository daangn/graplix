{
  "scopeName": "graplix.injection",
  "injectionSelector": "L:source.ts, L:source.tsx",
  "patterns": [
    {
      "name": "meta.embedded.inline.graplix",
      "begin": "\\b(graplix)(\\s*)(`)",
      "beginCaptures": {
        "1": {
          "name": "entity.name.function.tagged-template.ts"
        },
        "3": {
          "name": "punctuation.definition.string.template.begin.ts"
        }
      },
      "end": "`",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.string.template.end.ts"
        }
      },
      "patterns": [
        {
          "begin": "\\$\\{",
          "beginCaptures": {
            "0": {
              "name": "punctuation.section.embedded.begin.ts"
            }
          },
          "end": "\\}",
          "endCaptures": {
            "0": {
              "name": "punctuation.section.embedded.end.ts"
            }
          },
          "patterns": [
            {
              "include": "source.ts"
            }
          ]
        },
        {
          "include": "source.graplix"
        }
      ]
    }
  ]
}
