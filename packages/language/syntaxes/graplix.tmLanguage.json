{
  "name": "graplix",
  "scopeName": "source.graplix",
  "fileTypes": [".graplix"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.graplix",
      "match": "\\b(define|from|or|relations|type)\\b"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.graplix"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.graplix"
        }
      ]
    }
  }
}
